generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(cuid())
  telegramId    String           @unique
  name          String?
  displayName   String?
  dailyCheckInTarget Int         @default(8) // Плановое кол-во авто-проверок в день
  dailyCheckInTargetPending Int?
  dailyCheckInTargetPendingFrom DateTime?
  role          UserRole         @default(EMPLOYEE)
  checkInsEnabled Boolean        @default(true)
  notificationsEnabled Boolean   @default(true)  // Уведомления о пропущенных чекинах и вне зоны
  weeklyZoneReminderEnabled Boolean @default(true)  // Напоминание о зонах в понедельник
  cameraManualStartDisabled Boolean @default(false) // Отключить ручной старт камеры для особого режима
  workDays      String           @default("1,2,3,4,5") // Дни недели (0-6), по умолчанию Пн-Пт
  workStartMinutes Int           @default(540) // 09:00
  workEndMinutes Int             @default(1080) // 18:00
  nextCheckInAt DateTime?
  reportDeadlineMinutes Int      @default(5) // Дедлайн на сдачу отчета, минуты
  createdAt     DateTime         @default(now())
  
  zones         ZoneEmployee[]
  createdZones  Zone[]           @relation("ZoneCreator")
  checkInRequests CheckInRequest[]
  schedules    CheckInSchedule[]
  
  @@map("users")
}

model Zone {
  id          String   @id @default(cuid())
  name        String
  latitude    Float
  longitude   Float
  radius      Float
  isShared    Boolean  @default(false) // Общая зона для нескольких сотрудников
  createdBy   String
  createdAt   DateTime @default(now())
  
  createdByUser User   @relation("ZoneCreator", fields: [createdBy], references: [id])
  employees     ZoneEmployee[]
  
  @@map("zones")
}

model ZoneEmployee {
  id       String @id @default(cuid())
  zoneId  String
  userId  String
  
  zone    Zone   @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([zoneId, userId])
  @@map("zone_employees")
}

model CheckInRequest {
  id          String            @id @default(cuid())
  userId      String
  requestedAt DateTime         @default(now())
  status      CheckInStatus     @default(PENDING)
  telegramMessageId Int?        // ID сообщения в Telegram для обновления после завершения чекинга
  expiresAt   DateTime?         // Дедлайн на сдачу отчета
  
  user        User              @relation(fields: [userId], references: [id])
  result      CheckInResult?
  
  @@map("check_in_requests")
}

model CheckInResult {
  id            String   @id @default(cuid())
  requestId     String   @unique
  locationLat   Float
  locationLon   Float
  photoFileId   String?  // Временный file_id от Telegram (для совместимости)
  photoUrl      String?  // URL сохраненного фото (для долгосрочного хранения)
  photoPath     String?  // Путь к файлу на сервере (если храним локально)
  isWithinZone  Boolean
  distanceToZone Float?
  timestamp     DateTime @default(now())
  
  request       CheckInRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  
  @@map("check_in_results")
}

model CheckInSchedule {
  id          String   @id @default(cuid())
  userId      String
  scheduledAt DateTime
  status      CheckInScheduleStatus @default(PENDING)
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])

  @@index([userId, scheduledAt])
  @@map("check_in_schedules")
}

model StartMessage {
  telegramId String @id
  messageId  Int
  createdAt  DateTime @default(now())

  @@map("start_messages")
}

enum UserRole {
  DIRECTOR
  EMPLOYEE
}

enum CheckInStatus {
  PENDING
  COMPLETED
  MISSED
}

enum CheckInScheduleStatus {
  PENDING
  SENT
  SKIPPED
}