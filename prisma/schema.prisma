generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(cuid())
  telegramId    String           @unique
  name          String?
  role          UserRole         @default(EMPLOYEE)
  checkInsEnabled Boolean        @default(true)
  notificationsEnabled Boolean   @default(true)  // Уведомления о пропущенных чекинах и вне зоны
  weeklyZoneReminderEnabled Boolean @default(true)  // Напоминание о зонах в понедельник
  createdAt     DateTime         @default(now())
  
  zones         ZoneEmployee[]
  createdZones  Zone[]           @relation("ZoneCreator")
  checkInRequests CheckInRequest[]
  
  @@map("users")
}

model Zone {
  id          String   @id @default(cuid())
  name        String
  latitude    Float
  longitude   Float
  radius      Float
  createdBy   String
  createdAt   DateTime @default(now())
  
  createdByUser User   @relation("ZoneCreator", fields: [createdBy], references: [id])
  employees     ZoneEmployee[]
  
  @@map("zones")
}

model ZoneEmployee {
  id       String @id @default(cuid())
  zoneId  String
  userId  String
  
  zone    Zone   @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([zoneId, userId])
  @@map("zone_employees")
}

model CheckInRequest {
  id          String            @id @default(cuid())
  userId      String
  requestedAt DateTime         @default(now())
  status      CheckInStatus     @default(PENDING)
  
  user        User              @relation(fields: [userId], references: [id])
  result      CheckInResult?
  
  @@map("check_in_requests")
}

model CheckInResult {
  id            String   @id @default(cuid())
  requestId     String   @unique
  locationLat   Float
  locationLon   Float
  photoFileId   String?  // Временный file_id от Telegram (для совместимости)
  photoUrl      String?  // URL сохраненного фото (для долгосрочного хранения)
  photoPath     String?  // Путь к файлу на сервере (если храним локально)
  isWithinZone  Boolean
  distanceToZone Float?
  timestamp     DateTime @default(now())
  
  request       CheckInRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  
  @@map("check_in_results")
}

enum UserRole {
  DIRECTOR
  EMPLOYEE
}

enum CheckInStatus {
  PENDING
  COMPLETED
  MISSED
}
